doctype 5
html
  head
    title drone.bz | Automate the mundane.
    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Exo|Contrail+One'
    = javascript_include_tag 'application'
    = javascript_include_tag 'ember/appdroneapp' if @ember
    = csrf_meta_tags

  body class=controller_name
    #root
      .header
        .container
          .row
            .span9.offset1
              h2#mastHead
                strong drone.bz
                span.light Automate the mundane.
                

          .row
            .span9.offset1
              = image_tag image_path('logo.png'), class: 'ant-logo'
              #mainNav
                = yield :main_nav
              #sideNav
                h2
                  span.template-count
                    span.template-count-number.label = number_with_delimiter(AppTemplate.count)
                    |  Rails templates served.
                span.tweet_button = render partial: 'shared/tweet_button'


      .container
        .row
          #content.span9.offset1
            = yield

            
      #root_footer

    #footer
      .container
        .row
          .span5.offset1 style='padding-top: 12px'
            - gemspec = Gem.loaded_specs['app_drone']
            = link_to 'https://github.com/jeriko/app_drone', target: '_blank', rel: 'tooltip', class: 'repo-link', title: 'Gem source code on GitHub' do
              strong = gemspec.name + '.gem'
              | &nbsp;&mdash;&nbsp;
              = 'v ' + gemspec.version.to_s
            em powered by Ember.js

          .span3 style='padding-top: 11px; text-align: right'
            = link_to 'https://twitter.com/whoisdandavey', target: '_blank', class: 'btn btn-mini', rel: 'tooltip', title: 'Find me on Twitter' do
                i.icon-twitter-sign
                |  whoisdandavey

            = link_to 'https://github.com/jeriko', target: '_blank', class: 'btn btn-mini', rel: 'tooltip', title: 'Fork me on GitHub :P' do
                i.icon-github-sign
                |  jeriko
          
          .span1
            = link_to '', 'http://platform45.com', target: '_blank', class: 'platform45logo', rel: 'tooltip-right', title: 'A <strong>platform45</strong> production'
