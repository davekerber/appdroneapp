#codeSnippet.hide
  | rails new AppName --builder=
  = app_template_url(uuid: @app_template.uuid, format: 'rb')

javascript:
  $(function() {
    $('#copySuccess').hide();
    $('a#copy').zclip({
      path: '#{asset_path("ZeroClipboard.swf").html_safe}',
      copy: $('#codeSnippet').html(),
      afterCopy: function() {
        $('#copySuccess').show().fadeOut(2000);
      }
    });
  });
