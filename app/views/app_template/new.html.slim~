br
a.btn.btn-large.btn-primary#go
  i.icon-large.icon-ok
  | &nbsp;
  | GO!

javascript:
  $(function() {
    $('#go').click(function() {
      $.ajax({
        method: 'GET',
        url: 'http://localhost:3000/build',
        data: {
          drones: [
            { name: 'bundle' },
            { name: 'javascripts' } ,
            { name: 'stylesheets' },
            { name: 'slim_view' },
            { name: 'high_voltage' },
            { name: 'flair' },
            { name: 'bootstrap', params: { vendor: false } }
          ]
        },
        success: function(response) {
          $('html').html(response);
        }
      });
    });
  });
